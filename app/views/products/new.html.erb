<h2> <%= flash[:notice] %> <h2>

<h1>New Product</h1>

<%= form_with model: @product do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :summary %><br>
    <%= form.text_area :summary %>
  </div>

   <div>
    <%= form.label :price %><br>
    <%= form.number_field :price, step: :any %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>